<%= simple_form_for book do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.input :title %>
  <%= f.input :sub_title %>
  <%= f.input :publisher %>
  <%= f.input :genre %>
  <%= f.input :classification %>
  <%= f.input :general_type %>
  <%= f.input :year %>

  <% Author.all.each do |author| %>
    <div class="form-check">
      <%= hidden_field_tag "book[author_ids][]", nil %>
      <%= check_box_tag "book[author_ids][]",
        author.id,
        @book.author_ids.include?(author.id),
        id: author.id,
        class: 'form-check-input' %>
      <%= label_tag author.id, author.full_name, class: 'form-check-label' %>
    </div>
  <% end %>
  <br>

  <%= f.button :submit, class: 'btn btn-outline-primary' %>
<% end %>
